<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_titlebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BFFF"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="@drawable/bluetooth_alt"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
    <Button
        android:id="@+id/ble_advertising"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:onClick="onGattServerButtonClicked"
        android:background="@drawable/ble_scan_button"
        android:gravity="center"
        android:text="@string/ble_start_gatt_server"
        android:textColor="@color/white"/>
    </LinearLayout>
    <View
        android:layout_width="2dip"
        android:layout_height="fill_parent"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

    <Button
        android:id="@+id/ble_scan"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:onClick="onScanButtonClicked"
        android:background="@drawable/ble_scan_button"
        android:text="@string/ble_start_scan"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"/>
    </LinearLayout>
</LinearLayout>